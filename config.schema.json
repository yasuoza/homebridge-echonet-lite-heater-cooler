{
  "pluginAlias": "EchonetLiteHeaterCooler",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "required": true,
        "default": "HeaterCooler"
      },
      "refreshInterval": {
        "title": "Status refresh interval minutes",
        "type": "number",
        "default": 15,
        "required": true
      },
      "requestTimeout": {
        "title": "EchonetLite request timeout second",
        "type": "number",
        "default": 10,
        "placeholder": 10,
        "required": false
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "items": {
          "title": "Host",
          "type": "string"
        }
      }
    }
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "Basic settings",
      "items": [
        "name",
        "refreshInterval"
      ]
    },
    {
      "type": "fieldset",
      "title": "Manual Discovery",
      "description": "If automatic discovery is not working, try this.",
      "expandable": true,
      "items": [
        {
          "key": "devices",
          "type": "array",
          "buttonText": "Add Device",
          "items": {
            "title": "Host",
            "type": "string",
            "required": true
          }
        }
      ]
    },
    {
      "type": "fieldset",
      "title": "Advanced settings",
      "expandable": true,
      "expanded": false,
      "items": [
        "requestTimeout"
      ]
    }
  ]
}
